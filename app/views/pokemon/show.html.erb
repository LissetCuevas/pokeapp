<div class="d-flex justify-content-center">
  <div class="card h-100" style="width: 433px; border: 16px solid #FFEC9E; border-radius: 5px">
      <img 
        src=<%= "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/#{@pokemon.api_id ? @pokemon.api_id : rand(1..898)}.png"%>
        class="card-img-top "
        style="background: linear-gradient(#190033, #660066); width: 400px;"
      />
    <div class="card-body text-dark text-center" style="background: #FFEC9E">
      <h1 class="card-title"><%= @pokemon.name %></h1>
      <div class="card-text">
        <div style="display: flex; justify-content: space-evenly">
          <p>Weight: <b><%= @pokemon.weight %></b></p>
          <p>Height: <b><%= @pokemon.height %></b></p>
        </div>
        <p>Base experience: <b><%= @pokemon.base_experience %></b></p>
        <p>Order: <b><%= @pokemon.order %></b></p>
        <div>
          Types:
          <% @pokemon.types.map do |type| %>
            <div class="badge alert-success">
              <%= type.name %>
            </div>
          <% end %>
        </div>
        <br/>
        <div>
          Abilities:
          <% @pokemon.abilities.map do |ability| %>
            <div class="badge alert-danger">
              <%= ability.name %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<br/>
<% if user_signed_in? %>
<div class="text-center">
  <%= link_to 'edit', edit_pokemon_path(@pokemon), class: "btn btn-primary"%>
  <%= link_to 'delete', @pokemon, data: { "turbo-method": :delete }, class: "btn btn-danger" %>
</div>
<% end %>
