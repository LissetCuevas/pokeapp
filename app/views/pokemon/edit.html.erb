<h1>Editing <%= @pokemon.name%></h1>

<%= form_with model: @pokemon, url: pokemon_path(@pokemon), method: "patch" do |f| %>
  <div style="width: 300px">  
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: "form-control", value: @pokemon.name %>
    </div>
    <div class="form-group">
      <label>Base experience</label>
      <%= f.number_field  :base_experience, class: "form-control", value: @pokemon.base_experience %>
    </div>
    <div class="form-group">
      <label>Height</label>
      <%= f.number_field :height, class: "form-control", value: @pokemon.height %>
    </div>
    <div class="form-group">
      <label>Order</label>
      <%= f.number_field :order, class: "form-control", value: @pokemon.order %>
    </div>
    <div class="form-group">
      <label>Weight</label>
      <%= f.number_field :weight, class: "form-control", value: @pokemon.weight %>
    </div>
    <div class="form-group">
      <label>Location area encounters:</label>
      <%= f.text_field :location_area_encounters, class: "form-control", value: @pokemon.location_area_encounters %>
    </div>
    <div class="form-group">
      <label>Types</label> <br/>
      <%= f.select :types, options_for_select(@types.map(&:name), @pokemon.types.map(&:name)) ,{:include_blank => 'None'}, {:multiple => true}%>
    </div>
    <div class="form-group">
      <label>Abilities</label> <br/>
      <%= f.select :abilities, options_for_select(@abilities.map(&:name), @pokemon.abilities.map(&:name)), {:include_blank => 'None'}, {:multiple => true} %>
    </div>
    
    <br/>
    <%= f.button "Update", class: "btn btn-primary" %>
  </div>
<% end %>
